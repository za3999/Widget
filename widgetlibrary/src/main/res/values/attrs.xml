<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AutoImageView">
        <attr name="yScale" format="float"></attr>
        <attr name="xScale" format="float"></attr>
    </declare-styleable>

    <declare-styleable name="AutoLinearLayout">
        <attr name="y_scale" format="float"></attr>
        <attr name="x_scale" format="float"></attr>
    </declare-styleable>

    <declare-styleable name="ShadowRoundImageView">
        <attr name="firstShadowWidth" format="dimension"></attr>
        <attr name="secondShadowWidth" format="dimension"></attr>
        <attr name="firstShadowColor" format="color"></attr>
        <attr name="secondShadowColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="AutoLayout">
        <attr name="horizontalSpacing" format="dimension"/>
        <attr name="verticalSpacing" format="dimension"/>
        <attr name="paddingTop" format="dimension"/>
        <attr name="maxLines" format="integer"/>
    </declare-styleable>

    <declare-styleable name="AppearanceTextView">
        <attr name="support_text_appearance" format="boolean" />
        <attr name="support_text_selected" format="boolean" />
        <attr name="support_text_default_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="AppearanceImageView">
        <attr name="support_image_appearance" format="boolean" />
        <attr name="support_image_selected" format="boolean" />
        <attr name="support_image_default_color" format="color|reference" />
    </declare-styleable>

</resources>